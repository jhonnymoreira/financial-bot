{
  "$schema": "node_modules/wrangler/config-schema.json",
  "name": "financial-bot",
  "main": "src/index.ts",
  "compatibility_flags": ["nodejs_compat"],
  "compatibility_date": "2025-12-17",
  "send_metrics": false,
  "upload_source_maps": true,
  "placement": {
    "mode": "smart"
  },
  "observability": {
    "traces": {
      "enabled": true,
      "head_sampling_rate": 1,
      "persist": true
    },
    "logs": {
      "enabled": true,
      "head_sampling_rate": 1,
      "invocation_logs": true,
      "persist": true
    }
  },
  "secrets_store_secrets": [
    {
      "binding": "ANTHROPIC_API_KEY",
      "store_id": "d65937ab096048d08ff5a7b343b753ba",
      "secret_name": "financial-bot_anthropic_api_key"
    },
    {
      "binding": "TELEGRAM_BOT_TOKEN",
      "store_id": "d65937ab096048d08ff5a7b343b753ba",
      "secret_name": "financial-bot_telegram_bot_token"
    },
    {
      "binding": "TELEGRAM_WEBHOOK_SECRET_TOKEN",
      "store_id": "d65937ab096048d08ff5a7b343b753ba",
      "secret_name": "financial-bot_secret_token"
    }
  ]
}
